@model List<AuthApp.Models.RecetteMagasin>
@{
    ViewData["Title"] = $"Tableau de Bord - {ViewBag.MagasinNom}";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h2>Bienvenue, @ViewBag.MagasinNom</h2>
        </div>
        <div class="card-body">
            <!-- Section Réparateurs -->
            <div class="mb-5">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h3>Gestion des Réparateurs</h3>
                    <a asp-controller="Reparateur" asp-action="Create" class="btn btn-success">
                        <i class="fas fa-plus"></i> Ajouter un réparateur
                    </a>
                </div>

                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Nom</th>
                            <th>Nom d'utilisateur</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var reparateur in ViewBag.Reparateurs as List<AuthApp.Models.Reparateur>)
                        {
                            <tr>
                                <td>@reparateur.Nom</td>
                                <td>@reparateur.UserName</td>
                                <td>
                                    <a asp-controller="Reparateur" asp-action="Edit" asp-route-id="@reparateur.reparateurID"
                                       class="btn btn-sm btn-warning">
                                        <i class="fas fa-edit"></i> Modifier
                                    </a>
                                    <a asp-controller="Reparateur" asp-action="Delete" asp-route-id="@reparateur.reparateurID"
                                       class="btn btn-sm btn-danger">
                                        <i class="fas fa-trash"></i> Supprimer
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Section Recettes -->
            <div class="mt-5">
                <h3>Vos Dernières Recettes</h3>
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Total Recettes</th>
                            <th>Total Taxes</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var recette in Model)
                        {
                            <tr>
                                <td>@recette.Date.ToString("dd/MM/yyyy")</td>
                                <td>@recette.RecetteTotaleMagasin.ToString("C")</td>
                                <td>@recette.TotalTax.ToString("C")</td>
                                <td>
                                   
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>