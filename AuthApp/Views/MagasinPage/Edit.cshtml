@model AuthApp.Models.Reparateur

@{
    ViewData["Title"] = "Modifier Réparateur";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h2>@ViewData["Title"]</h2>
        </div>
        <div class="card-body">
            <form asp-action="Edit">
                <input type="hidden" asp-for="reparateurID" />
                <input type="hidden" asp-for="MagasinId" />
                <!-- Associer les réparateurs à la recette (en supposant qu'il y a plusieurs réparateurs) -->
               

                <!-- Même contenu que Create.cshtml -->
                @await Html.PartialAsync("~/Views/MagasinPage/_ReparateurFormFields.cshtml", Model)

                <div class="form-group mt-3">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> Enregistrer
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Retour
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>