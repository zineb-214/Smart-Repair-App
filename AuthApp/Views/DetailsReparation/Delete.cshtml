@model AuthApp.Models.DetailsReparation

@{
    ViewData["Title"] = "Delete Repair Detail";
}

<link rel="stylesheet" href="~/css/Delete.css" asp-append-version="true" />

<div class="delete-container">
    <div class="delete-header">
        <h2>Are you sure you want to delete this repair detail?</h2>
    </div>

    <div class="delete-body">
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert-warning">
                <i class="fas fa-exclamation-triangle"></i>
                @TempData["ErrorMessage"]
            </div>
        }

        <div class="details-container">
            <div class="detail-item">
                <div class="detail-label">@Html.DisplayNameFor(model => model.Description):</div>
                <div class="detail-value">@Html.DisplayFor(model => model.Description)</div>
            </div>

            <div class="detail-item">
                <div class="detail-label">@Html.DisplayNameFor(model => model.PrixReste):</div>
                <div class="detail-value">@Html.DisplayFor(model => model.PrixReste)</div>
            </div>

            <div class="detail-item">
                <div class="detail-label">Device:</div>
                <div class="detail-value">@Html.DisplayFor(model => model.Appareil.Nom)</div>
            </div>

            <div class="detail-item">
                <div class="detail-label">Repair:</div>
                <div class="detail-value">@Html.DisplayFor(model => model.Reparation.Id)</div>
            </div>
        </div>
    </div>

    <div class="delete-footer">
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">
                <i class="fas fa-trash-alt"></i> Confirm Delete
            </button>
            <a asp-action="Index" asp-controller="Reparation" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Back to List
            </a>
        </form>
    </div>
</div>
