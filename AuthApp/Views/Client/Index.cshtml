@model IPagedList<AuthApp.Models.Client>
@using X.PagedList
@using X.PagedList.Mvc.Core

@{
    ViewData["Title"] = "Clients";
}

<link rel="stylesheet" href="~/css/index.css" asp-append-version="true" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">

<h1>Clients</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.First().Nom)</th>
            <th>@Html.DisplayNameFor(model => model.First().Tele)</th>
            <th>@Html.DisplayNameFor(model => model.First().Image)</th>
            <th>@Html.DisplayNameFor(model => model.First().Code)</th>
            <th>@Html.DisplayNameFor(model => model.First().Reparateur)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Nom)</td>
                <td>@Html.DisplayFor(modelItem => item.Tele)</td>
                <td>
                    <img src="Images/@item.Image" style="width:30px;height:30px">
                </td>
                <td>@Html.DisplayFor(modelItem => item.Code)</td>
                <td>@Html.DisplayFor(modelItem => item.Reparateur.Nom)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">
                        <i class="fas fa-edit"></i>
                    </a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">
                        <i class="fas fa-eye"></i>
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">  <i class="fa fa-trash"></i>Delete</a>
                   
                </td>

            </tr>
        }
    </tbody>
</table>

<!-- Pagination -->
<div class="pagination">
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
</div>
