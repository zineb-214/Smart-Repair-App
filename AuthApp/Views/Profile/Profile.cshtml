@model AuthApp.Models.ProfileViewModel
@{
    ViewData["Title"] = $"{Model.UserType} Profile";
}

<div class="container profile-container">
    <div class="card profile-card">
        <div class="card-header bg-primary text-white">
            <h3>@Model.UserType Profile</h3>
        </div>
        <div class="card-body">
            <div class="form-group">
                <label>Username:</label>
                <input type="text" class="form-control" value="@Model.Username" readonly>
            </div>
            <div class="form-group">
                <label>Password:</label>
                <input type="password" class="form-control" value="@Model.Password" readonly>
            </div>
            <a asp-action="Edit" class="btn btn-primary">
                <i class="fas fa-edit"></i> Modifier
            </a>
        </div>
    </div>
</div>